#!/usr/bin/env python

import json
import subprocess

outputs = json.loads(subprocess.run([
    "swaymsg", "--raw", "-t", "get_outputs"
], capture_output=True).stdout)

width = 0
height = 0

for output in outputs:
    current_mode = output["current_mode"]

    width = max(width, current_mode["width"])
    height = max(height, current_mode["height"])

print(f"{width}x{height}")
